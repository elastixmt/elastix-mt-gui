#!/bin/sh
#
#   Script de inicio y finalizaciï¿½ de un servicio de framework
#   de demonio de Palosanto Solutions, compatible con
#   sistema de inicio de servicios de RedHat/Fedora (chkconfig).
#   Este script asume que el servicio se inicia desde el comienzo
#   con privilegios de usuario normal (no root)
#
#   chkconfig: 2345 91 19
#   description: Elastix Update Helper
#

# Biblioteca de funciones de scripts
if [ -f /etc/init.d/functions ] ; then
	. /etc/init.d/functions
elif [ -f /etc/rc.d/init.d/functions ] ; then
	. /etc/rc.d/init.d/functions
else
	exit 0
fi

# Los siguientes parametros deben de configurarse segn el demonio
DAEMON=elxupdaterd
PROGRAMA="Elastix Update Helper"
DIR_TRABAJO=/opt/elastix/elastix-updater
USUARIO=root

# Los siguientes parametros son normalmente derivados de los dos primeros
SERVICE_LOCK="/var/lock/subsys/elastix-updaterd"
PIDFILE_SYSTEM="/var/run/$DAEMON.pid"

start() {
    echo -n $"Starting $PROGRAMA: "
    daemon $"su $USUARIO -c \"$DIR_TRABAJO/$DAEMON\""
        RETVAL=$?
    echo
    if [ $RETVAL = 0 ] ; then
        touch $SERVICE_LOCK
    fi
    return $RETVAL
}

stop () {
    echo -n $"Stopping $PROGRAMA: "
    killproc $DAEMON
    RETVAL=$?
    echo
    if [ $RETVAL = 0 ] ; then
        rm -f $SERVICE_LOCK
        rm -f $PIDFILE_SYSTEM
    fi
    return $RETVAL
}


restart() {
    stop
    start
}

case $1 in
	start)
		start
	;;
	stop)
		stop
	;;
	restart)
		restart
	;;
	condrestart)
		[ -f $SERVICE_LOCK ] && restart || :
	;;
	reload)
		echo -n $"Reloading $PROGRAMA: "
		config
		killproc $DAEMON -HUP
		RETVAL=$?
		echo
		if [ $RETVAL -ne 0 ]
		then
			# Rebuild ppds.dat file if the daemon wasn't
			# there to do it.
			$DAEMON --ppdsdat
		fi
	;;
	status)
		status $DAEMON
	;;
	*)

	echo $"Uso: $prog {start|stop|restart|condrestart|reload|status}"
	exit 1
esac

exit $?
